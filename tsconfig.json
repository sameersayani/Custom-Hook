{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "jsx": "react-jsx",
    "allowJs": false,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "examples/**/*", "index.ts", "App.tsx"],
  "exclude": ["node_modules", "dist"]
}